<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net45;net472;net48;net5.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\Properties\snKey.snk</AssemblyOriginatorKeyFile>
    <ManifestTimestampUrl>http://timestamp.digicert.com</ManifestTimestampUrl>
    <PackageIcon>Properties\project.png</PackageIcon>
    <ApplicationIcon>..\Properties\project.ico</ApplicationIcon>
    <Version>3.0.1</Version>
    <Description>Asynchronous Task Extension Library</Description>
    <Company>Bio-Hazard Industries</Company>
    <Copyright>Copyright ©  1998-2020</Copyright>
    <Authors>Latency McLaughlin</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReleaseNotes>Added target support for .NET 5.0, .NET Core 3.1</PackageReleaseNotes>
    <RepositoryType>GIT</RepositoryType>
    <License>MIT</License>
    <PackageProjectUrl>http://latency.github.io/AsyncTask</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Latency/AsyncTask</RepositoryUrl>
    <PackageTags>API TAP TPL .NET Core ORM IoC DI Generics Delegates EventHandlers Parametric-Polymorphism</PackageTags>
    <SignTool>C:\Program Files (x86)\Windows Kits\10\bin\x64\signtool.exe</SignTool>
    <AllowPrAeview>true</AllowPrAeview>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net5.0' And '$(TargetFramework)' != 'netcoreapp3.1' ">
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Properties\project.png">
      <Pack>True</Pack>
      <PackagePath>Properties</PackagePath>
    </None>
  </ItemGroup>

</Project>