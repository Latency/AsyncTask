<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;netstandard2.1;net45;net472;net48;net5.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Properties\snKey.snk</AssemblyOriginatorKeyFile>
    <ManifestTimestampUrl>http://timestamp.digicert.com</ManifestTimestampUrl>
    <PackageIcon>Kitty.png</PackageIcon>
    <ApplicationIcon>Properties\project.ico</ApplicationIcon>
    <Version>3.0.0</Version>
    <Description>Object Relational Mapped Monitor Extension Library</Description>
    <Company>Bio-Hazard Industries</Company>
    <Copyright>Copyright ©  1998-2020</Copyright>
    <Authors>Latency McLaughlin</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageReleaseNotes>Added target support for .NET 5.0, .NET Core 3.1, .NET Standard 2.1</PackageReleaseNotes>
    <RepositoryType>GIT</RepositoryType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <License>MIT</License>
    <PackageProjectUrl>http://latency.github.io/AsyncTask</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Latency/AsyncTask</RepositoryUrl>
    <PackageTags>API TAP TPL .NET Core ORM IoC DI Generics Delegates EventHandlers Parametric-Polymorphism</PackageTags>
    <SignTool>C:\Program Files (x86)\Windows Kits\10\bin\x64\signtool.exe</SignTool>
    <AllowPrAeview>true</AllowPrAeview>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Properties\Kitty.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' != 'net5.0' And '$(TargetFramework)' != 'netstandard2.1' And '$(TargetFramework)' != 'netcoreapp3.1' ">
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net5.0' Or '$(TargetFramework)' == 'netstandard2.1' Or '$(TargetFramework)' == 'netcoreapp3.1' ">
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

</Project>